<%- include("../partials/header") %>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4>USER PROFILE: <%= user.firstName + " " + user.lastName %></h4>
      <p>
        <a href="/follow/<%= user.id %>"><button class="btn btn-primary">Follow <%= user.username %></button></a>
      </p>
      <div class="thumbnail">
        <img class="rounded" src="<%= user.avatar %>" alt="user profile image" />
        <div class="caption">
          <a href="mailto:<%= user.email %>">Send email to: <%= user.email %></a>
        </div>
        <% if(currentUser && currentUser._id.equals(user.id) || currentUser && currentUser.isAdmin){ %>
        <div class="caption">
          <a href="/users/<%= user.id %>/edit">Edit your profile?</a>
        </div>
        <div class="caption">
          <a href="/forgot">Reset your password?</a>
        </div>
        <% } else if (!currentUser) { %>
        <div class="caption">
          <a href="/login">Login</a>
        </div>
        <% } %>
      </div>
      Lorem ipsum
    </div>
    <div class="col-md-8">
      <h4><%= user.username %>'s entries:</h4>
      <ul>
        <% campgrounds.forEach(function(campground) { %>
        <li>
          <a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a>
        </li>
        <% }); %>
      </ul>
    </div>
  </div>
</div>
</div>

<%- include("../partials/footer") %>