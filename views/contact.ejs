<%- include('./partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form class="form-group" action="/contact" method="POST">
                <div>
                    <label>Your name
                        <input name="name" type="text" value="<%=currentUser.firstName %>" class="form-control"
                            required />
                    </label>
                </div>
                <div>
                    <label>Your email
                        <input name="email" type="email" value="<%=currentUser.email %>" class="form-control"
                            required />
                    </label>
                </div>
                <div>
                    <label>Message
                        <textarea name="message" cols="30" rows="10" class="form-control" required></textarea>
                    </label>
                </div>
                <div>
                    <input type="submit" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>